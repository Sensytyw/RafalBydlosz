<Window x:Class="Library.OrderBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Library" Height="450" Width="800" Closing="Window_Closing" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGridBooks" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="-4,0,4,0"
                FontFamily="Century Gothic" />

        <Button Click="Button_Click" Grid.Row="2" Content="Dodaj Zamówienie"
                Background="#5E7E5E" FontFamily="Century Gothic"
                FontSize="32" Foreground="#E9EDE9"
                BorderThickness="0,4,0,0" BorderBrush="#4B654B"/>

        <Button Grid.Row="2" Grid.Column="2" Click="Button_Click_1" Content="Edytuj Zamówienie"
                    Background="#7E5E7E" FontFamily="Century Gothic"
                FontSize="32" Foreground="#EDE9ED"
                    BorderThickness="0,4,0,0" BorderBrush="#654B65"/>
    </Grid>
</Window>
