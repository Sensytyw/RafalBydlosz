<Window x:Class="Library.LibraryApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="LibraryApp" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0">
            <Image.Source>
                <BitmapImage UriSource="/images/BookMuchBigger.png" />
            </Image.Source>
        </Image>
        <Button Grid.Row="1" Background="#435469" Foreground="#bfc4c9" FontFamily="Century Gothic" FontSize="48" Content="LIBRARY" Click="Button_Click"/>
    </Grid>
</Window>
