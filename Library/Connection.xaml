<Window x:Class="Library.Connection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Connection" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="BookId" />
        <Label Content="Name" Grid.Row="1"/>
        <Label Content="Genre" Grid.Row="2"/>
        <Label Content="Cover" Grid.Row="3"/>
        <Label Content="Language" Grid.Row="4"/>
        <Label Content="Type" Grid.Row="5"/>
        <Label Content="Date" Grid.Row="6"/>



        <Button Grid.Row="7"  Content="Connect" Click="Button_Click" />
    </Grid>
</Window>
