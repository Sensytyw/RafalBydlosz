<Window x:Class="Library.AddBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
                Title="FoundBook" Height="450" Width="800" Background="#2B2B2B" Icon="/Book64Add.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label FontSize="32" FontFamily="Century Gothic" VerticalAlignment="Center"
               HorizontalAlignment="Right" Content="Name:"
               Background="Transparent" Foreground="#F1EDEA"/>
        <Label Grid.Row="1" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Genre:" Foreground="#F1EDEA"/>
        <Label Grid.Row="2" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Cover:" Foreground="#F1EDEA"/>
        <Label Grid.Row="3" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Language:" Foreground="#F1EDEA"/>
        <Label Grid.Row="4" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Type:" Foreground="#F1EDEA"/>
        <Label Grid.Row="5" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Cover:" Foreground="#F1EDEA"/>
        <TextBox x:Name="name_txt" Grid.Column="1" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                 Text="{Binding id, Mode=TwoWay}"/>
        <TextBox x:Name="genre_txt" Grid.Column="1" Grid.Row="1" FontFamily="Century Gothic" FontSize="32" 
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                 Text="{Binding name, Mode=TwoWay}"/>
        <TextBox x:Name="cover_txt" Grid.Column="1" Grid.Row="2" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                 Text="{Binding number, Mode=TwoWay}"/>
        <TextBox x:Name="language_txt" Grid.Column="1" Grid.Row="3" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                 Text="{Binding genre, Mode=TwoWay}"/>
        <TextBox x:Name="type_txt" Grid.Column="1" Grid.Row="4" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                 Text="{Binding genre, Mode=TwoWay}"/>
        <TextBox x:Name="date_txt" Grid.Column="1" Grid.Row="5" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                 Text="{Binding genre, Mode=TwoWay}"/>
        <Button Content="Confirm" Grid.Row="6" Click="Button_Click"
                FontFamily="Century Gothic" FontSize="36" Foreground="#EDF1EA" Background="#769D64"/>
        <Button Content="Cancel" Grid.Row="6" Grid.Column="1" Click="Button_Click_1"
                FontFamily="Century Gothic" FontSize="36" Foreground="White" Background="#9D6476"/>

    </Grid>
</Window>