<Window x:Class="Library.AddBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
                Title="AddBook" Height="450" Width="800" Background="#2B2B2B" Icon="/Book64Add.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label FontSize="32" FontFamily="Century Gothic" VerticalAlignment="Center"
               HorizontalAlignment="Right" Content="Name:"
               Background="Transparent" Foreground="#F1EDEA"/>
        <Label Grid.Row="1" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Genre:" Foreground="#F1EDEA"/>
        <Label Grid.Row="2" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Cover:" Foreground="#F1EDEA"/>
        <Label Grid.Row="3" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Language:" Foreground="#F1EDEA"/>
        <Label Grid.Row="4" FontSize="32" FontFamily="Century Gothic"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Background="Transparent" Content="Type:" Foreground="#F1EDEA"/>
        <TextBox Grid.ColumnSpan="2" x:Name="name_txt" Grid.Column="1" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <TextBox Grid.ColumnSpan="2" x:Name="genre_txt" Grid.Column="1" Grid.Row="1" FontFamily="Century Gothic" FontSize="32" 
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <TextBox Grid.ColumnSpan="2" x:Name="cover_txt" Grid.Column="1" Grid.Row="2" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <TextBox Grid.ColumnSpan="2" x:Name="language_txt" Grid.Column="1" Grid.Row="3" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <TextBox Grid.ColumnSpan="2" x:Name="type_txt" Grid.Column="1" Grid.Row="4" FontFamily="Century Gothic" FontSize="32"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <Button  x:Name="Button_Ad" Content="Confirm" Grid.Row="5" Click="Button_Add"
                FontFamily="Century Gothic" FontSize="36" Foreground="#EDF1EA" Background="#769D64" Visibility="Hidden"/>
        <Button x:Name="Button_Ed" Content="Confirm" Grid.Row="5" Click="Button_Eddit"
                FontFamily="Century Gothic" FontSize="36" Foreground="#EDF1EA" Background="#769D64" Visibility="Hidden"/>
        <Button Content="Cancel" Margin="4" Grid.Row="5" Grid.Column="1" Click="Button_Cancel"
                FontFamily="Century Gothic" FontSize="36" Foreground="White" Background="#9D6476"/>
        <Button Content="Clear" Margin="4"  Grid.Row="5" Grid.Column="2" Click="Button_Clear"
                FontFamily="Century Gothic" FontSize="36" Foreground="White" Background="#8B649D"/>

    </Grid>
</Window>