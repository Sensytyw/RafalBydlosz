<Window x:Class="RafalBydlosz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RafalBydlosz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
          <RowDefinition Height="*" />

        </Grid.RowDefinitions>

      <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"></TextBox>
      
        <Button Grid.Row="1" FontSize="36" FontFamily="Gothic Century"> 7 </Button>
        <Button Grid.Column="1" Grid.Row="1" FontSize="36" FontFamily="Gothic Century" > 8 </Button>
        <Button Grid.Column="2" Grid.Row="1" FontSize="36" FontFamily="Gothic Century" > 9 </Button>
        <Button Grid.Column="3" Grid.Row="1" FontSize="36" FontFamily="Gothic Century" > + </Button>

        <Button Grid.Row="2" FontSize="36" FontFamily="Gothic Century" > 4 </Button>

        <Button Grid.Column="1" Grid.Row="2" FontSize="36" FontFamily="Gothic Century" > 5 </Button>
        <Button Grid.Column="2" Grid.Row="2" FontSize="36" FontFamily="Gothic Century" > 6 </Button>
        <Button Grid.Column="3" Grid.Row="2" FontSize="36" FontFamily="Gothic Century" > - </Button>

        <Button Grid.Row="3" FontSize="36" FontFamily="Gothic Century" > 1 </Button>

        <Button Grid.Column="1" Grid.Row="3" FontSize="36" FontFamily="Gothic Century" > 2 </Button>
        <Button Grid.Column="2" Grid.Row="3" FontSize="36" FontFamily="Gothic Century" > 3 </Button>
        <Button Grid.Column="3" Grid.Row="3" Grid.RowSpan="2" FontSize="76" FontFamily="Gothic Century" > = </Button>

        <Button Grid.Row="4" FontSize="36" FontFamily="Gothic Century"> 0 </Button>

        <Button Grid.Column="1" Grid.Row="4" FontSize="36" FontFamily="Gothic Century" > x </Button>
        <Button Grid.Column="2" Grid.Row="4" FontSize="36" FontFamily="Gothic Century" > / </Button>



    </Grid>
</Window>
