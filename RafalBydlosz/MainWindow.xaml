<Window x:Class="RafalBydlosz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RafalBydlosz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="56" Background="DarkGreen">
    <Grid>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
          <RowDefinition Height="*" />

        </Grid.RowDefinitions>

      <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"></TextBox>
      
        <Button Grid.Row="1" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_7"> 7 </Button>
        <Button Grid.Column="1" Grid.Row="1" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_8" > 8 </Button>
        <Button Grid.Column="2" Grid.Row="1" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_9" > 9 </Button>
        <Button Grid.Column="3" Grid.Row="1" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_Clear" > C </Button>

        <Button Grid.Row="2" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_4" > 4 </Button>

        <Button Grid.Column="1" Grid.Row="2" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_5" > 5 </Button>
        <Button Grid.Column="2" Grid.Row="2" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_6" > 6 </Button>
        <Button Grid.Column="3" Grid.Row="2" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_plus" > + </Button>

        <Button Grid.Row="3" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_1" > 1 </Button>

        <Button Grid.Column="1" Grid.Row="3" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_2" > 2 </Button>
        <Button Grid.Column="2" Grid.Row="3" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_3" > 3 </Button>
        <Button Grid.Column="3" Grid.Row="3"  FontSize="76" FontFamily="Gothic Century" Click="Button_Click_minus" > - </Button>
        <Button Grid.Column="3" Grid.Row="4"  FontSize="76" FontFamily="Gothic Century" Click="Button_Click_equal" >=</Button>

        <Button Grid.Row="4" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_0"> 0 </Button>

        <Button Grid.Column="1" Grid.Row="4" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_multiplication" > x </Button>
        <Button Grid.Column="2" Grid.Row="4" FontSize="56" FontFamily="Gothic Century" Click="Button_Click_divide" > / </Button>



    </Grid>
</Window>
