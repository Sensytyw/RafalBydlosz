<Window x:Class="RafalBydlosz.TicTacToe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RafalBydlosz"
        mc:Ignorable="d"
        Title="TicTacToe" Height="450" Width="800" FontFamily="CenturyGothic" FontSize="65">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="Button4" Grid.Row="1" Click="Button_Click" Content="4" Background="#FDFDFD"/>
        <Button x:Name="Button5" Grid.Column="1" Grid.Row="1"   Click="Button_Click" Content="5" Background="#FDFDFD" />
        <Button x:Name="Button6" Grid.Column="2" Grid.Row="1"   Click="Button_Click" Content="6" Background="#FDFDFD" />
        
        <Button x:Name="Button1" Click="Button_Click" Content="1" Background="#FDFDFD"/>
        <Button x:Name="Button2" Grid.Column="1"   Click="Button_Click" Content="2" Background="#FDFDFD" />
        <Button x:Name="Button3" Grid.Column="2"   Click="Button_Click" Content="3" Background="#FDFDFD" />
        
        <Button x:Name="Button7" Grid.Row="2" Click="Button_Click" Content="7" Background="#FDFDFD"/>
        <Button x:Name="Button8" Grid.Column="1" Grid.Row="2"   Click="Button_Click" Content="8" Background="#FDFDFD" />
        <Button x:Name="Button9" Grid.Column="2" Grid.Row="2"   Click="Button_Click" Content="9" Background="#FDFDFD" />
    </Grid>
</Window>
