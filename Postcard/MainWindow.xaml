<Window x:Class="Postcard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Postcard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#F8F8F8">
    <Grid>
        <StackPanel Margin="10">
            <Label Style="{StaticResource Zyczenia1}">WESOLYCH</Label>
            <Label Style="{StaticResource Zyczenia2}">SWIAT</Label>
            <Button Style="{StaticResource SmallButton}"></Button>
            <Button Style="{StaticResource MediumButton}"></Button>
            <Button Style="{StaticResource BigButton}"></Button>

        </StackPanel>
    </Grid>
</Window>
